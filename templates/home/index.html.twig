{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}

<style>

  .liste-des-commentaires {
    display: flex;
    flex-wrap: wrap;
    margin-left: 10vw;
    margin-top: 50px;
    margin-bottom: 50px;
   
  }

  .card-form-comments {
    
    margin: auto;
    margin-top: 30px;
    width: 200px; 
  }
  .titre-formulaire {
    box-shadow: 10px 15px 8px black;
    border-radius: 5px;
    color: rgb(223, 229, 218);
    margin: auto;
    margin-top: 100px;
    width: 300px;
  }
    .card-commentaires {
      
      text-align: center;
      margin-left: 20px;
      display: block;
      align-items: center;
      
      box-shadow: 0px 5px 5px white;
      height: 150px;
      width: 200px;
      margin-top: 10px;
      background: blue;
      color: white;

    }

    .text-comments {

      margin-top: -30px;
      padding: 5px;
    }

    h3, .titre-commentaire {

      box-shadow: 10px 15px 8px black;
      border-radius: 5px;
      color: rgb(223, 229, 218);
      width: 500px;
       height: 70px;
       margin: auto;
     margin-top: 200px;
      text-align: center;
    }

   
</style>

      {% endblock %}
      {% block body %}

<h3 class=" titre-formulaire "> commentaire </h3>
<div class="card-form-comments" >
  
   {{ form(commentaireForm)}}
  </div>

  
    
    <img class="image-accueil"  style=" margin-top: 200px; margin-left: 10vw; width: 400px; height: 400px; " src="http://miam-images.m.i.pic.centerblog.net/o/e7bc99a0.png"/>


      <h3 class="titre-commentaire"> liste des commentaires </h3>
    <div class="liste-des-commentaires">
    {% for commentaires in commentaire %}
      <div class="card-commentaires" >
        <p style="  font-size: 1.5em; color: grey;">{{ commentaires.pseudo }}</p>
        <br>
        <p class="text-comments">{{ commentaires.message}} </p>
        
     </div>
        
    {% endfor %}

     </div>
  
{% endblock %}
